@model IEnumerable<rmc.Models.GbvCase>

@{
    ViewData["Title"] = "Gbv Reports";
}
<div class="container-fluid">
    <div class="container">
  <div class="well"> 
    <div class="row">
        <div class="col-md-3 text-center">GBV Reports</div>
        <div class="col-md-3 col-md-offset-6 text-center"><a class="btn btn-primary" asp-action="Create"> New Report</a></div>
     </div>
  </div>
</div>
        <table id="tbl" class="table table-striped table-bordered nowrap dt-responsive nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IncCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItrCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientFatherName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaritalStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RefDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RefTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastUpdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InsertDate)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospital)
            </th>
                        <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IncCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItrCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientFatherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @if (item.Sex == 0)
                {
                    @Html.Raw("Male")
                }
                else
                {
                    @Html.Raw("Female")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @if (item.MaritalStatus == 0)
                {
                    @Html.Raw("Married")
                }
                @if(item.MaritalStatus==1)
                {
                    @Html.Raw("Single")
                }            
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsertDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hospital.FacilityName)
            </td>
            <td>
            <div style="display: inline-block; float: none; white-space: nowrap;">
                <a asp-action="Edit" asp-route-id="@item.GbvCaseId"><span class="glyphicon glyphicon-pencil"></span></a> |
                <a asp-controller="Consents" asp-action="edit" asp-route-id="@item.GbvCaseId">fill report</a> |
                <a asp-action="Delete" asp-route-id="@item.GbvCaseId"><span class="glyphicon glyphicon-trash"></span></a>
            </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var table = $('#tbl').DataTable({
                responsive: true,
            });
        });
    </script>
}